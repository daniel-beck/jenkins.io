:ruby
  tutorials = []
  site.pages.reverse_each do |page|
    # Some pages don't have tags
    next if page.tags.nil?
    page.tags.each do |tag|
      # tag is an Awestruct::Extensions::Tagger::TagStat
      next unless tag.to_s == 'tutorial'
      tutorials << page
    end
  end

:css
  .switch a {
    text-decoration: none;
    padding: 5px;
    display: block;
  }

.sidebar-nav.tour

  %h3
    Developer Guides


  .switch
    %a{:href => '/doc'}
      Go to User Documentation

  %h4
    Getting Started
  %ul
    %li
      = active_href('doc/developer/development-environment', 'Setting Up', :fuzzy => true)
    %li
      = active_href('doc/developer/plugin-tutorial', 'Plugin Tutorial', :fuzzy => true)

  %h4
    Reference
  %ul
    - site.devbook.chapters.each do |chapter|
      %li
        = active_href(File.join('doc/developer', chapter.key), chapter.title, :fuzzy => true)
    %li
      = active_href('doc/developer/guides', 'Appendix B: Index of All How-To Guides', :fuzzy => true)

  %h4
    Javadoc
  %ul
    %li
      %a{:href => 'http://javadoc.jenkins.io/'}
        Latest
    - ['1.554', '1.565', '1.580', '1.596', '1.609', '1.625', '1.642', '1.651', '2.7', '2.19', '2.32'].reverse.each do |version|
      %li
        %a{:href => "http://javadoc.jenkins.io/archive/jenkins-#{version}"}
          = version
